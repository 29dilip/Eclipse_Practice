package Streams;

import java.util.Arrays;
import java.util.Comparator;
import java.util.List;
import java.util.stream.Collectors;

public class Main {
	public static void main(String[] args) {
		List<Employee> employees = Arrays.asList(new Employee(1, "Avantika", 50000), new Employee(2, "Santosh", 40000),
				new Employee(3, "Swamy", 60000));

		List<Employee> sortedEmployees = employees.stream().sorted(Comparator.comparingInt(Employee::getId)
				.thenComparing(Employee::getName).thenComparingDouble(Employee::getSalary))
				.collect(Collectors.toList());
		

		sortedEmployees.forEach(System.out::println);
	}
}
